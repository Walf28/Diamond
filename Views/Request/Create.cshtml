@model Diamond.Models.Request
@{
    ViewData["Title"] = $"Добавление заявки";
}

<form method="post">
    <input type="submit" value="Сохранить"/>

    <p>Дата желаемого выполнения заявки<input type="date" asp-for="@Model.DateOfDesiredComplete" required/></p>
    <p>Товар<select asp-for="@Model.ProductId" asp-items="@(new SelectList(ViewBag.Products, "Id", "GetNameAndCount"))" required></select></p>
    <p>Количество<input type="number" asp-for="@Model.Count" min="1" required/></p>
</form>